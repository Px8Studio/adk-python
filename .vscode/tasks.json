{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MCP: Start Dev Server",
      "type": "shell",
      "command": "docker-compose -f docker-compose.dev.yml up -d",
      "options": {
        "cwd": "${workspaceFolder}/backend/genai-mcp-toolbox"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "MCP: Start Prod Server",
      "type": "shell",
      "command": "docker-compose -f docker-compose.prod.yml up -d",
      "options": {
        "cwd": "${workspaceFolder}/backend/genai-mcp-toolbox"
      },
      "problemMatcher": []
    },
    {
      "label": "MCP: Stop Dev Server",
      "type": "shell",
      "command": "docker-compose -f docker-compose.dev.yml down",
      "options": {
        "cwd": "${workspaceFolder}/backend/genai-mcp-toolbox"
      },
      "problemMatcher": []
    },
    {
      "label": "MCP: Test DNB Echo API",
      "type": "shell",
      "command": "curl -i https://api.dnb.nl/echo-api/helloworld",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "MCP: Test DNB Echo API (via Toolbox)",
      "type": "shell",
      "command": "curl.exe",
      "args": [
        "-X", "POST",
        "http://localhost:5000/api/tool/dnb-echo-helloworld/invoke",
        "-H", "Content-Type: application/json",
        "-d", "\"{}\"",
        "-v"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "MCP: Test DNB Echo API (via Toolbox - PowerShell)",
      "type": "shell",
      "command": "Invoke-WebRequest",
      "args": [
        "-Uri", "http://localhost:5000/api/tool/dnb-echo-helloworld/invoke",
        "-Method", "POST",
        "-ContentType", "application/json",
        "-Body", "'{}'",
        "-UseBasicParsing"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "MCP: Test DNB Echo API (via Toolbox - File)",
      "type": "shell",
      "command": "curl.exe",
      "args": [
        "-X", "POST",
        "http://localhost:5000/api/tool/dnb-echo-helloworld/invoke",
        "-H", "Content-Type: application/json",
        "--data-raw", "{}",
        "-w", "\\n%{http_code}\\n"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "DNB: Test Echo API (Direct)",
      "type": "shell",
      "command": "curl",
      "args": [
        "-H", "Ocp-Apim-Subscription-Key: ${env:DNB_SUBSCRIPTION_KEY_DEV}",
        "https://api.dnb.nl/echo-api/helloworld"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
