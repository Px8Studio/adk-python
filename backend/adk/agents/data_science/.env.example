# Orkhon Data Science Multi-Agent System Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Google Cloud Configuration
# ============================================================================

# Choose Model Backend: 0 -> AI Studio (API Key), 1 -> Vertex AI
GOOGLE_GENAI_USE_VERTEXAI=1

# AI Studio backend (if GOOGLE_GENAI_USE_VERTEXAI=0)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# Vertex AI backend configuration (if GOOGLE_GENAI_USE_VERTEXAI=1)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# ============================================================================
# BigQuery Configuration
# ============================================================================

# BigQuery project for data storage (where your datasets live)
BQ_DATA_PROJECT_ID=your-gcp-project-id

# BigQuery project for compute (can be same as data project)
BQ_COMPUTE_PROJECT_ID=your-gcp-project-id

# BigQuery dataset ID (e.g., dnb_statistics)
BQ_DATASET_ID=dnb_statistics

# ============================================================================
# Dataset Configuration
# ============================================================================

# Path to dataset configuration JSON file
# Default: dnb_statistics_dataset_config.json (in the data_science directory)
DATASET_CONFIG_FILE=./backend/adk/agents/data_science/dnb_statistics_dataset_config.json

# ============================================================================
# Model Configuration
# ============================================================================

# Model for the root coordinator agent
ROOT_AGENT_MODEL=gemini-2.0-flash-exp

# Model for BigQuery sub-agent
BIGQUERY_AGENT_MODEL=gemini-2.0-flash-exp

# Model for Analytics sub-agent (with Code Interpreter)
ANALYTICS_AGENT_MODEL=gemini-2.0-flash-exp

# ============================================================================
# Code Interpreter Configuration (Optional)
# ============================================================================

# Pre-existing Code Interpreter extension resource name (optional)
# Format: projects/<PROJECT_ID>/locations/<LOCATION>/extensions/<EXTENSION_ID>
# Leave empty to create a new extension automatically
CODE_INTERPRETER_EXTENSION_NAME=

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
